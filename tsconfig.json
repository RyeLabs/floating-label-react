{
  "compilerOptions": {
    "outDir": "dist/",
    "declaration": true,
    "declarationDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "module": "esnext",
    "jsx": "react",
    "target": "es5",
    "moduleResolution": "node",
    "lib": ["es6", "es2016", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["*.tsx"],
  "exclude": ["node_modules"]
}
